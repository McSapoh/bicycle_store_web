@{Layout = "_LayoutAdmin";}

<div class="row">
    <div class="col-md-8">
        <h2 class="text-dark">Bicycle List</h2>
    </div>
    <div class="col-md-4 contaiten-fluid">
        <button type="button" class="btn btn-dark form-control text-white" data-toggle="ajax-modal" data-target="#addBicycle" id="btnAdd"
                OnClick="openPopup('/Admin/_AddBicycle')">
            Add New Bicycle
        </button>
    </div>
</div>

<table id="BicycleTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="even">
            <th>Name</th>
            <th>Wheel diameter</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Type</th>
            <th>Producer</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
</table>
<div id="PopupPlaceHolder" class="modal"></div>


@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            loadBicycleDataTable(BicycleTable);
        });
    </script>
}