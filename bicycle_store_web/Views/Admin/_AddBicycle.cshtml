@model Bicycle

<h2 class="text-dark text-center">@(Model.Id!=0 ? "Edit" : "Create") Bicycle</h2>
<form id="bicycleForm" enctype="multipart/form-data" asp-action="SaveBicycle" asp-controller="Admin">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="Name"></label>
        </div>
        <div class="col-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)"
         style="height: 100px; width: 100px;" class="m-auto" />
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="Photo"></label>
        </div>
        <div class="col-8">
            <input type="file" asp-for="Photo" id="photo" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="WheelDiameter"></label>
        </div>
        <div class="col-8">
            <input asp-for="WheelDiameter" class="form-control" />
            <span asp-validation-for="WheelDiameter" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="Price"></label>
        </div>
        <div class="col-8">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="Quantity"></label>
        </div>
        <div class="col-8">
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="TypeId"></label>
        </div>
        <div class="col-8">
            <select asp-items="ViewBag.Type" value="" class="form-control" asp-for="TypeId"></select>
            <span asp-validation-for="Type.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="CountryId"></label>
        </div>
        <div class="col-8">
            <select asp-items="ViewBag.Country" value="" class="form-control" asp-for="CountryId"></select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="ProducerId"></label>
        </div>
        <div class="col-8">
            <select asp-items="ViewBag.Producer" value="" class="form-control" asp-for="ProducerId"></select>
            <span asp-validation-for="ProducerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12  d-flex flex-row">
            <button type="button" class="btn btn-primary form-control m-1"
                    onclick="saveObject('bicycleForm')">
                @(Model.Id != 0 ? "Update" : "Create")
            </button>
            <button type="button" class="btn btn-primary form-control m-1" data-dismiss="modal">
                Close
            </button>
        </div>
    </div>
</form>


