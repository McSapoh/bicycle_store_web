@{Layout = "_Layout";}

@model IQueryable<User>

<div class="row">
    <div class="col-md-8">
        <h2 class="text-dark">User List</h2>
    </div>
</div>

<table id="UserTable" class="table table-striped table-bordered bg-secondary" style="width:100%">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Adress</th>
            <th>Username</th>
            <th>Is Admin</th>
            <th>Photo</th>
        </tr>
    </thead>
</table>

<div id="PopupPlaceHolder" class="modal"></div>

@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            loadDataTable("UserTable", @ViewBag.Id)
        });
    </script>
}