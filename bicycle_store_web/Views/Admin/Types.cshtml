@{Layout = "_LayoutAdmin";}

<div class="row">
    <div class="col-md-8">
        <h2 class="text-dark">Type List</h2>
    </div>
    <div class="col-md-4 contaiten-fluid">
        <button type="button" class="btn btn-dark form-control text-white" data-toggle="ajax-modal" data-target="#addType"
                OnClick="openPopup('/Admin/_AddType')">
            Add New Type
        </button>
    </div>
</div>

<table id="TypeTable" class="table table-striped table-bordered bg-secondary" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
</table>

<div id="PopupPlaceHolder" class="modal"></div>

@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            loadTypeDataTable(TypeTable);
        });
    </script>
}