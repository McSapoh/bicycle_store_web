@{Layout = "_Layout";}
@model IQueryable<Bicycle>

    <div class="row">
        <div class="col-md-8">
            <h2 class="text-dark">Bicycle List</h2>
        </div>
        <div class="col-md-4 contaiten-fluid"></div>
    </div>
<div class="row" @*style="background-color: #666e75"*@>
    
    @{
        foreach (Bicycle bicycle in Model)
        {
        <div class="col-lg-4 text-black-50" @*style="min-width: 280px; max-width: 290px;"*@>
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(bicycle.Photo)"
                 style="height: 250px; width: 250px" />
            <h2 class="text-white">@bicycle.Name</h2>
            <p>Діаметр коліс @bicycle.WheelDiameter</p>
            <p>Тип @bicycle.Type.Name</p>
            <p>Виробник @bicycle.Producer.Name</p>
            <p>Країна @bicycle.Country.Name</p>
            <div class="row">
                <p class="col-md-7">Ціна @bicycle.Price&#8372</p>
                <div class="col-md-5 contaiten-fluid">
                    @{
                        if (bicycle.Quantity != 0)
                        {
                            <button type="button" class="btn btn-dark form-control text-white"
                                    onclick="addToCart(@bicycle.Id)">
                                Add to cart
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-dark form-control text-white"
                                    pointer-events: none;>
                                Not available
                            </button>
                        }
                    }

                </div>
            </div>
        </div>
        }
    }
</div>
<div id="PopupPlaceHolder" class="modal"></div>